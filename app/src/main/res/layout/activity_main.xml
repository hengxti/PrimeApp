<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.hengstberger.primeapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output"
        android:id="@+id/output_textView"
        android:layout_below="@+id/run_probable"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/numberPicker"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Prime"
        android:id="@+id/run_probable"
        android:layout_below="@+id/numberPicker"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/run_probable_1000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate 1000 Primes"
        android:id="@+id/run_probable_1000"
        android:layout_below="@+id/numberPicker"
        android:layout_alignParentEnd="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Number of Bits for the Prime Number"
        android:id="@+id/textViewInput"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/numberPicker"
        android:layout_alignBottom="@+id/numberPicker"
        android:layout_alignParentTop="true" />




</RelativeLayout>
